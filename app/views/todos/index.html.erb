<div class="container">

  <div class="list-box">
    <div class="title">
      <h1>Todo List</h1>
    </div>

    <div class="line-break"></div>

    <div class="list">
      <% @todos.each do |item| %>
        <li><%= item.title %> - <%= item.description %></li>
      <% end %>

      <div class="buttons">
        <%= link_to 'New', new_todo_path %>
      </div>

    </div>
  </div>
</div>
